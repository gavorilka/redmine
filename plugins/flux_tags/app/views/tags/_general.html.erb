 <%=  javascript_include_tag('tags.js', :plugin => :flux_tags) %>
<%
  @settings = ActionController::Parameters.new(@settings)
%>

<%# <p> %>
  <%#= label_tag 'settings[issues_sidebar]', "issues sidebar" %>
  <%#= select_tag 'settings[issues_sidebar]', options_for_select(%w(none list cloud simple_cloud).collect{|v| [l("issue_tags_sidebar_#{ v }"), v]}, @settings[:issues_sidebar]) %>
<%# </p> %>
<%# <p> %>
  <%#= label_tag 'settings[issues_show_count]', "show issue count" %>
  <%#= check_box_tag 'settings[issues_show_count]', 1, 1 == @settings[:issues_show_count].to_i %>
<%# </p> %>
<%# <p> %>
  <%#= label_tag 'settings[issues_open_only]', "Issues Open Only" %>
  <%#= check_box_tag 'settings[issues_open_only]', 1, 1 == @settings[:issues_open_only].to_i %>
<%# </p> %>
<%# <p> %>
  <%#= label_tag 'settings[issues_sort_by]', "Issues short by" %>
  <%#= select_tag 'settings[issues sort by]', options_for_select(%w(name count).collect{|v| [("issues sort by_#{v}"), v]}, @settings[:issues_sort_by]) %>
  <%#= select_tag 'settings[issues sort order]', options_for_select(%w(asc desc).collect{|v| [("issues sort order_#{v}"), v]}, @settings[:issues_sort_order]) %>
<%# </p> %>
<p>
  <%= label_tag 'settings[issues_use_colors]', l(:label_for_used_color) %>
  <%= check_box_tag 'settings[issues_use_colors]', 1, 1 == @settings[:issues_use_colors].to_i %>
</p>